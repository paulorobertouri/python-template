# BEGIN OF TEMPLATE

root = true

# Unix-style newlines with a newline ending every file
[*]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
end_of_line = lf
charset = utf-8
max_line_length = 80

[*.{py,pyi,toml}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{sh},Makefile]
indent_style = tab

[Dockerfile,*.{Dockerfile,dockerignore}]
indent_style = tab

[*.md]
indent_style = tab

[*.ps1]
indent_style = tab

[*.{json}]
indent_size = 2
tab_width = 2

# JS files
[*.{ts,js,jsx,tsx,mjs,cjs}]
indent_size = 2
tab_width = 2

# SQL files
[*.sql]
indent_size = 2
tab_width = 2

# END OF TEMPLATE
